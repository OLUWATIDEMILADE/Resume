/* Media queries for smaller screens */
@media screen and (max-width: 768px) {
    h1, h2, h3, h4, h5 {font-size: large;} /* Adjust font size for headings */
    p {font-size: medium;} /* Adjust font size for paragraphs */
    header {border: 10px;} /* Adjust border thickness for header */
    section {border: 10px;} /* Adjust border thickness for sections */
    img {border-radius: 3cm;} /* Adjust border radius for images */
  }
  
